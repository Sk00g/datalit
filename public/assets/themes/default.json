{
    "name": "Default",
    "version": "v1.01.190504",
    "description": "This is a basic theme for testing purposes",
    "isBase": true,
    "colors": {
        "BackgroundMain": "DDDDDD",
        "BackgroundDark": "333353",
        "TextMain": "1e1e1e",
        "TextMainHighlight": "55",
        "TextLight": "DDDDDD"
    },
    "controlProperties": {
        "Icon": {
            "margin": 4,
            "imageSize": [32, 32]
        },
        "Label": {
            "margin": [12, 8, 12, 8],
            "fontColor": "$colors.TextMain",
            "fontSize": 12,
            "valign": "CENTER"
        },
        "Button": {
            "margin": 10,
            "fontColor": "$colors.TextLight",
            "fontSize": 12,
            "backgroundColor": "$colors.BackgroundDark",
            "borderColor": "$colors.TextLight",
            "styles": {
                "HOVERED": {
                    "fontColor": "FF",
                    "backgroundColor": "444464",
                    "borderColor": "FF"
                },
                "DEPRESSED": {
                    "fontColor": "FF",
                    "backgroundColor": "555575",
                    "borderColor": "FF",
                    "textOffset": 2
                }
            }
        },
        "LabelButton": {
            "margin": [12, 8, 12, 8],
            "fontColor": "$colors.TextMain",
            "fontSize": 12,
            "valign": "CENTER",
            "styles": {
                "HOVERED": {
                    "fontColor": "$colors.TextMainHighlight"
                },
                "DEPRESSED": {
                    "fontColor": "$colors.TextMainHighlight",
                    "margin": [13, 9, 12, 8]
                }
            }
        },
        "TextInput": {
            "margin": 8,
            "borderColor": "000000",
            "borderThickness": 1,
            "backgroundColor": "FFFFFF",
            "fontColor": "222222",
            "focusColor": "4477EE88",
            "styles": {
                "HOVERED": {
                    "fontColor": "000000",
                    "borderColor": "FF0000"
                },
                "DEPRESSED": {
                    "fontColor": "000000",
                    "borderColor": "00FF00"
                }
            }
        }
    }
}
