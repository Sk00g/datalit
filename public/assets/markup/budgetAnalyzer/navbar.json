{
    "type": "Section",
    "id": "navbar",
    "properties": {
        "contentDirection": "HORIZONTAL",
        "valign": "TOP",
        "vsizeTarget": ["MIN", null],
        "backgroundColor": "$t=greenBusiness.colors.light"
    },
    "children": [
        {
            "type": "IconButton",
            "id": "categoriesButton",
            "properties": { "imagePath": "categories", "action": "$c=navigateCommand" }
        },
        {
            "type": "IconButton",
            "id": "expenseButton",
            "properties": { "imagePath": "expense", "action": "$c=navigateCommand" }
        },
        {
            "type": "IconButton",
            "id": "incomeButton",
            "properties": { "imagePath": "income", "action": "$c=navigateCommand" }
        },
        {
            "type": "IconButton",
            "id": "reportButton",
            "properties": { "imagePath": "report", "action": "$c=navigateCommand" }
        },
        {
            "type": "Label",
            "properties": {
                "text": "Budget Analyzer",
                "fontSize": 18,
                "margin": [0, 0, 170, 0],
                "halign": "CENTER",
                "valign": "CENTER",
                "fontColor": "2e2e2e"
            }
        },
        {
            "type": "Label",
            "id": "todayLabel",
            "properties": {
                "halign": "RIGHT",
                "valign": "CENTER",
                "fontColor": "$t=greenBusiness.colors.dark"
            }
        }
    ]
}
