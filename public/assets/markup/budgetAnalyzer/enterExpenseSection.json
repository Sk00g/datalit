                    "properties": {
                        "text": "$d=coreData:newExpenseName",
                        "text2": {
                            "path": "coreData:newExpenseName",
                            "mode": "TWO_WAY",
                            "authority": "USER",
                            "persist": "EXPLICIT"
                        }
                    }
                },
                {
                    "type": "Label",
                    "properties": {
                        "text": "Amount:",
                        "fontSize": 14
                    }
                },
                {
                    "type": "TextInput",
                    "id": "amountInput",
                    "properties": {}
                },
                {
                    "type": "Label",
                    "properties": {
                        "text": "Category:",
                        "fontSize": 14
                    }
                },
                {
                    "type": "TextInput",
                    "id": "categoryInput",
                    "properties": {}
                },
                {
                    "type": "Button",
                    "id": "saveButton",
                    "properties": {
                        "text": "SAVE",
                        "action": "$c=saveCommand",
                        "hsizeTarget": ["FIXED", 120],
                        "vsizeTarget": ["FIXED", 32]
                    }
                }
            ]
        }
