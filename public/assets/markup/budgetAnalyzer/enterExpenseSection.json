{
    "type": "Section",
    "id": "enterExpenseSection",
    "properties": {
        "contentDirection": "HORIZONTAL"
    },
    "children": [
        {
            "type": "Section",
            "id": "mainSection",
            "properties": {
                "halign": "CENTER",
                "valign": "CENTER",
                "hsizeTarget": ["FIXED", 300],
                "vsizeTarget": ["MIN", null]
            },
            "children": [
                {
                    "type": "Section",
                    "id": "totalSection",
                    "properties": {
                        "contentDirection": "HORIZONTAL",
